              </div>
              <div class='clear'></div>
            </div>

            <div class='row'>
              <label for="city_banner"><%= f.label :banner %></label>
              <div class='inputCnt'>
                <%= f.file_field :banner %>
                (1024 x 363 pixels)
              </div>
              <div class='clear'></div>
            </div>

            <div class='row'>
              <label for="city_description"><%= f.label :description %></label>
              <div class='inputCnt'>
                <%= f.text_area :name , rows: 20 %>
              </div>
              <div class='clear'></div>
            </div>

            <div class='row'>
              <label for="city_Destination"><%= f.label :destination %></label>
              <div class='inputCnt'>
                <%= f.select :destination, ["North Island","South Island"] %>
                <option value="2">South Island</option></select>
              </div>
              <div class='clear'></div>
            </div>


            <div class="row">
              <%= f.fields_for :attractions do |attraction| %>
