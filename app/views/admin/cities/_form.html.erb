<div class='bodyCnt'>
  <div class='wraper'>
    <div id='inner-main'>
      
      <div class='subNavCnt'>
        <h1>New City</h1>
        <div class='moreLinks'>
          <ul>
            <li>
              <% link_to "Back" , admin_cities_path %>
            </li>
          </ul>
        </div>
        <div class='clear'></div>
