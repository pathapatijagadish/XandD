<div class="bodyCnt">
  <div class="wraper">
    <div id="inner-main">
      <div class="subNavCnt">
        <h1>Activities</h1>
        <div class="moreLinks">
          <ul>
            <li>
              <%= link_to 'New Activity', new_admin_activity_path %>
            </li>
          </ul>
        </div>
        <div class="clear"></div>
      </div>
      <table class="cmsTable">
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Timing</th>
          <th>Rating</th>
          <th colspan="3"></th>
        </tr>
        <% @activities.each do |activity| %>
          <tr>
            <td><%= activity.name %></td>
            <td><%= activity.description %></td>
            <td><%= activity.price %></td>
            <td><%= activity.timing %></td>
            <td><%= activity.rating %></td>
            <td><%= link_to 'Show', admin_activity_path(activity) %><br>
            <%= link_to 'Edit', edit_admin_activity_path(activity) %><br>
            <%= link_to 'Destroy', admin_activity_path(activity), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
      <br/>
      <br/>
    </div>
  </div>
  <div class="clear"></div>
  <div class="clear"></div>
</div>